<div class= "wraper">

  <div class= "profile">
    <%= image_tag @product.photo.url(:medium) %>
    <p>
      <strong>Name:</strong>
      <%= @product.name %>
    </p>
    <p>
      <strong>Skills:</strong>
      <%= @product.description %>
    </p>
    <p>
      <strong>Availabiliy:</strong>
      asdfsdaf, asdfasdfsd
    </p>
    <a><%= link_to 'Edit', edit_product_path(@product) %></a>
  </div>

  <div class= "reviews">
    <h3>Reviews</h3>
    <% @product.reviews.each do |review| %>
      <p>
        <%= review.comment %>
        <br>
        Added on: <%= review.created_at.strftime("%d %b. %Y") %>
      </p>
      <% end %>
      <h3>New Review</h3>
      <%= render 'reviews/form' %>
  </div>

</div>


